<?xml version="1.0" encoding="utf-8"?>    
 <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    
        android:layout_width="match_parent"
    	android:layout_height="match_parent" 
    	android:background="@android:color/white"
    	>
   <RelativeLayout 
       
        android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	android:background="@android:color/background_light"
    	android:id="@+id/toprel">
    
 <com.android.volley.toolbox.NetworkImageView 
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"            
            android:src="@drawable/t"
            android:id="@+id/profilepic" 
            android:layout_centerHorizontal="false"
            
            />
 
          <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="" 
         android:layout_below="@id/profilepic"         
         android:textSize="20sp"
         android:textStyle="bold"
          android:layout_marginLeft="30dp"
           android:layout_marginTop="20dp"
         android:textColor="@android:color/black"
         android:gravity="left"
         />

     <RatingBar
         android:id="@+id/ratingBar1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_marginLeft="30dp"
          android:layout_marginTop="8dp"
          android:layout_below="@id/textView1"
         android:numStars="5"
         style = "?android:attr/ratingBarStyleSmall"
         android:stepSize="0.2"
         android:rating="2.0"
        />
    
     <TextView
         android:id="@+id/textViewy"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="category | 2045 views" 
         android:layout_marginLeft="30dp"
        android:layout_below="@id/ratingBar1" 
         android:textSize="12dp"
         android:layout_marginTop="5dp"
         android:textColor="@android:color/darker_gray"
         android:gravity="bottom"
         android:layout_marginBottom="20dp"
         />
   
     </RelativeLayout>
     
   <RelativeLayout 
     android:id="@+id/reldown"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@id/toprel">
     
  <RelativeLayout 
      android:id="@+id/rel1"
      android:layout_width="match_parent"
       android:layout_height="10dp"
       android:background="#AAAAAA">
           
  </RelativeLayout>
      <ScrollView 
          android:id="@+id/scrollview"
    android:layout_width="fill_parent"
    android:layout_height="290dp" 
    android:scrollbars="none"
    android:layout_below="@id/rel1"
    >
  <RelativeLayout  android:id="@+id/relo"
      android:layout_width="match_parent"
       android:layout_height="wrap_content">
  <RelativeLayout 
      android:id="@+id/rel2"
      android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:background="@android:color/white"
        >
          <TextView        
        android:id="@+id/textintroduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="@dimen/rating"        
        android:textColor="@android:color/black"
        android:text="About Us"
        android:layout_gravity="center"
         />  
         <ImageView 
             android:src="@drawable/backarrow"
             android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        />
      
      <RelativeLayout android:id="@+id/introductionrexpandlay"
          android:layout_marginBottom="-50dip"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"         
          android:visibility="gone"
          android:layout_height="wrap_content"
          android:layout_width="fill_parent"         
          android:orientation="vertical"
          android:layout_below="@id/textintroduction"
          >
      
           <TextView        
        android:id="@+id/introductionexpand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/rating"        
        android:textColor="@color/year"
        android:layout_marginBottom="10dp"
        android:text="a s sssssssssssssssssssss s"
        android:layout_gravity="start"
         />
          </RelativeLayout>
      
  </RelativeLayout>
  <RelativeLayout 
      android:id="@+id/uuu"
      android:layout_below="@id/rel2"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="#AAAAAA"></RelativeLayout>
  <RelativeLayout 
      android:id="@+id/rel3"
      android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_below="@id/uuu">
          <TextView        
        android:id="@+id/textoffer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="@dimen/rating"        
        android:textColor="@android:color/black"
        android:text="New Offers"
        android:layout_gravity="center"
         />  
         <ImageView 
             android:src="@drawable/backarrow"
             android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        />
      
      <RelativeLayout android:id="@+id/offerrexpandlay"
          android:layout_marginBottom="-50dip"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"         
          android:visibility="gone"
          android:layout_height="wrap_content"
          android:layout_width="fill_parent"         
          android:orientation="vertical"
          android:layout_below="@id/textoffer"
          >
      
           <TextView        
        android:id="@+id/offerexpand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/rating"        
        android:textColor="@color/year"
        android:layout_marginBottom="10dp"
        android:text="SORRY NO OFFERS YET"
        android:layout_gravity="start"
         />
          </RelativeLayout>
      
  </RelativeLayout>
    <RelativeLayout 
      android:id="@+id/yyy"
      android:layout_below="@id/rel3"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="#AAAAAA"></RelativeLayout>
        
    
    <RelativeLayout  
          android:id="@+id/ratinglay"
      android:layout_below="@id/yyy"
       android:layout_width="match_parent"
       android:layout_height="210dp">
         <TextView        
        android:id="@+id/textreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="@dimen/rating"        
        android:textColor="@android:color/black"
        android:text="Reviews"
        android:layout_gravity="center"
         />  
         
         <TextView
             android:id="@+id/rateus" 
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:layout_marginTop="10dp"
             android:layout_marginLeft="30dp"
             android:text="Rate us"
             android:textSize="12dp"
             android:layout_below="@id/textreview"/>
         <RatingBar
         android:id="@+id/ratingBaruser"
         android:layout_below="@id/rateus"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_marginLeft="5dp"
          android:layout_marginTop="0dp"       
         android:numStars="5"         
         android:stepSize="0.2"
         android:rating="2.0"
         android:scaleX="0.5"
  			android:scaleY="0.5" 
        />
         <EditText 
             android:id="@+id/userfeedback"
             android:layout_height="wrap_content"
             android:layout_width="200dp"
             android:layout_marginLeft="30dp"
             android:layout_below="@id/ratingBaruser"
             android:hint="add a comment"
             android:textSize="12dp"/>
         <TextView
             android:id="@+id/userfeedbackview" 
             android:layout_height="wrap_content"
             android:layout_width="200dp"
             android:layout_marginLeft="30dp"
             android:visibility="gone"
             android:layout_below="@id/ratingBaruser"/>
         <Button 
               android:id="@+id/submitbutton" 
             android:layout_alignParentRight="true"
             android:text="Add"
             android:layout_alignParentBottom="true"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_margin="20dp"
             />"
        
    </RelativeLayout>
    
    </RelativeLayout>     
  
    </ScrollView>
    
  <RelativeLayout 
      android:id="@+id/rel4"
      android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:background="@android:color/white"               
        android:layout_alignParentBottom="true">
      <RelativeLayout 
      android:id="@+id/ooo"     
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="#AAAAAA"></RelativeLayout>
          <TextView        
        android:id="@+id/viewprofile"
        android:layout_below="@id/ooo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:textSize="@dimen/rating"        
        android:textColor="@android:color/holo_blue_dark"
        android:text="View profile"
        android:gravity="center"
        
         />
              
      
  </RelativeLayout>
   
      
  </RelativeLayout>
</RelativeLayout>

  
